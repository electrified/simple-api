{
  "env": {
    "node": true,
    "es6": true
  },

  "extends": "eslint:recommended",

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "no-console": 0,
    "comma-dangle": ["error", "always-multiline"],
    "indent": ["error", 2],
    "semi": ["error", "always"]
  }
}