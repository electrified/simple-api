{
  "env": {
    "node": true,
    "es6": true
  },

  "extends": "eslint:recommended",

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", "tab"],
    "no-console": 0,
    "comma-dangle": ["error", "only-multiline"],
    "semi": ["error", "never"]
  }
}
